<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangleByName" class="org.neeraj.autowiring.Triangle" autowire="byName"/>
	<bean id="triangleByCons" class="org.neeraj.autowiring.Triangle" autowire="constructor"/>

	<bean id="pointA" class="org.neeraj.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="pointB" class="org.neeraj.spring.Point">
		<property name="x" value="10"></property>
		<property name="y" value="-20"></property>
	</bean>

	<bean id="pointC" class="org.neeraj.spring.Point">
		<property name="x" value="20"></property>
		<property name="y" value="10"></property>
	</bean>

</beans>