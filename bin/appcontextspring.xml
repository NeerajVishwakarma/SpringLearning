<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangleByName" class="org.neeraj.applicationcontext.Triangle" autowire="byName"/>

	<bean id="pointA" class="org.neeraj.applicationcontext.Point">
		<property name="x" value="10" />
		<property name="y" value="10" />
	</bean>
	<bean id="pointB" class="org.neeraj.applicationcontext.Point">
		<property name="x" value="100"></property>
		<property name="y" value="-200"></property>
	</bean>

	<bean id="pointC" class="org.neeraj.applicationcontext.Point">
		<property name="x" value="200"></property>
		<property name="y" value="100"></property>
	</bean>

</beans>