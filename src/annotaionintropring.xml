<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="org.neeraj.interfacespring.Triangle"
		autowire="byName" />

	<bean id="pointA" class="org.neeraj.interfacespring.Point">
		<property name="x" value="10" />
		<property name="y" value="10" />
	</bean>
	<bean id="pointB" class="org.neeraj.interfacespring.Point">
		<property name="x" value="100"></property>
		<property name="y" value="-200"></property>
	</bean>

	<bean id="pointC" class="org.neeraj.interfacespring.Point">
		<property name="x" value="200"></property>
		<property name="y" value="100"></property>
	</bean>

	<bean id="circle" class="org.neeraj.interfacespring.Circle"/>
	
	<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>

</beans>